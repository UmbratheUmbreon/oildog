function buyOildog() {
	let index = 0
	for (let i = 0; i < dogsSlots.length; i++) {
		if (dogsSlots[index][0] == 0) {
			dogsSlots[index] = [1,1,1,1,10]
		} else {
			index++
			if (index > slots) {
				return
			}
		}
	}
}